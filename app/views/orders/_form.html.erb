<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.association :status unless @order.new_record? %>  
  
  <%= f.input :description %>

  <%= f.button :submit, class: "btn btn-#{@order.new_record? ? "success" : "primary"}" %>
  <%= link_to 'Back', orders_path, class: 'btn btn-light text-dark' %>
<% end %>