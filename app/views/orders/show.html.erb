<div class="container">
  <h1>Order: <%= @order.control_number %></h1>
  
  <% if notice %>
    <h6 id="notice" class="alert alert-success"><%= notice %></h6>
  <% end %>

  <div class="form-group">
    Status:
    <input disabled class="form-control" value="<%= @order.status %>">
  </div>

  <div class="form-group">
    Description:
    <input disabled class="form-control" value="<%= @order.description %>">
  </div>

  <%= link_to 'Edit', edit_order_path(@order), class: "btn btn-primary text-white" %>
  <%= link_to 'Orders List', orders_path, class: "btn btn-light text-dark" %>
</div>